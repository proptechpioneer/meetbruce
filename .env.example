# Railway Environment Variables Configuration
# Copy these variables to your Railway project settings

# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-railway-domain.up.railway.app,localhost

# Database (Railway will automatically provide this)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Railway Platform Variables (automatically set by Railway)
RAILWAY_ENVIRONMENT=production
RAILWAY_PUBLIC_DOMAIN=your-app-domain.up.railway.app
RAILWAY_STATIC_URL=

# Optional: Add these for enhanced security in production
DJANGO_SETTINGS_MODULE=application.settings
PYTHONPATH=/app/application